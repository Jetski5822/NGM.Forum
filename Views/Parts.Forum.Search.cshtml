
@using NGM.Forum.ViewModels
@model dynamic

@using(Html.BeginForm("Index", "ForumSearch", new { area = "NGM.Forum" }, FormMethod.Get, new { forumsHomeId = Model.ForumsHomeId, @class="navbar-form navbar-right", role="search" })) { 
    <fieldset>
       <div class="form-group">
            @Html.TextBox("q", null, new { @class="form-control", placeholder="Search Forums" })
        </div>
        @Html.Hidden("forumsHomeId", (string) Model.ForumsHomeId.ToString())

        <button type="submit" class="btn btn-default">@T("Search")</button>
    </fieldset>
}


