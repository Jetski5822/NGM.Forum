@{ Layout.Title = T("Manage Forum Categories").ToString(); }
@{
    var forumsHomePagePart = (NGM.Forum.Models.ForumsHomePagePart) Model.ForumsHomePagePart;    
}

@using (Html.BeginFormAntiForgeryPost()) {
    @Html.ValidationSummary()
    @Html.Hidden("forumsHomePagePartId", forumsHomePagePart.Id.ToString());
    
    // Model is a Shape, calling Display() so that it is rendered using the most specific template for its Shape type
        <p>Adding Category to Forum's Home: @Model.ForumsHomePagePart.Title</p>

    @Display(Model.Editor)
}