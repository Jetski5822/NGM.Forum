
<span class="author">@T("Started by ")
    <i class="icon-user"></i>
    @Model.ContentPart.Owner.UserName
</span>

<i class="icon-calendar"></i>

@* a hack-around to be able to identify and parse UTC datetimes since the orchard output date has no timezone indicator (like a Z for UTC) *@
@if ( WorkContext.CurrentTimeZone == TimeZoneInfo.Utc){
    DateTime date = @Model.ContentPart.CreatedUtc;
    <span class="published utc-date-time ">@date.ToString("yyyy-MM-ddTHH:mm:ss Z")</span>        
} else {
    <span class="published">@Display.PublishedState(createdDateTimeUtc: Model.ContentPart.CreatedUtc, publisheddateTimeUtc: Model.ContentPart.PublishedUtc) </span>    
}
