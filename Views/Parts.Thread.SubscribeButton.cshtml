@using NGM.Forum.Models
@using Orchard.ContentManagement
@using Orchard.Utility.Extensions

@if (Model.CanSubscribe)
{
    if ( Model.IsSubscribed ) {
        @Html.ActionLink( T("Unsubscribe").ToString(), "DeleteSubscription", "Subscription", null, new {@class = "btn-subscribe btn btn-warning btn-sm"})
        
    } else {
        @Html.ActionLink( T("Subscribe").ToString(), "AddSubscription", "Subscription", null, new {@class = "btn-subscribe btn btn-info btn-sm"} )   
    }
    
}